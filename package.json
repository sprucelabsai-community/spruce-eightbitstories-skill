{
  "name": "eight-bit-stories",
  "description": "A ChatGPT powered bedtime story generator for parents who know their values and want them incorporated into nightly rituals.",
  "version": "0.0.1",
  "skill": {
    "namespace": "eightbitstories"
  },
  "homepage": "https://github.com/[YOUR REPO PATH]",
  "bugs": {
    "url": "https://github.com/[YOUR REPO PATH]/issues"
  },
  "keywords": [],
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w",
    "heroku-postbuild": "yarn build.dev",
    "release": "semantic-release",
    "build.dist": "yarn build.tsc && yarn build.resolve-paths"
  },
  "dependencies": {
    "@sprucelabs/data-stores": "^25.13.6",
    "@sprucelabs/error": "^5.1.46",
    "@sprucelabs/globby": "^1.0.3",
    "@sprucelabs/heartwood-view-controllers": "^108.1.1",
    "@sprucelabs/mercury-client": "^41.0.140",
    "@sprucelabs/mercury-core-events": "^22.0.138",
    "@sprucelabs/mercury-types": "^46.0.119",
    "@sprucelabs/schema": "^29.0.86",
    "@sprucelabs/spruce-core-schemas": "^39.0.128",
    "@sprucelabs/spruce-event-plugin": "^60.1.48",
    "@sprucelabs/spruce-event-utils": "^38.0.144",
    "@sprucelabs/spruce-form-utils": "^17.2.55",
    "@sprucelabs/spruce-invite-utils": "^9.0.57",
    "@sprucelabs/spruce-permission-plugin": "^30.0.283",
    "@sprucelabs/spruce-skill-booter": "^60.1.48",
    "@sprucelabs/spruce-skill-utils": "^30.1.24",
    "@sprucelabs/spruce-store-plugin": "^60.1.48",
    "@sprucelabs/spruce-view-plugin": "^46.0.229",
    "dotenv": "^16.3.1",
    "openai": "^4.19.0"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^7.0.122",
    "@sprucelabs/jest-sheets-reporter": "^3.0.26",
    "@sprucelabs/resolve-path-aliases": "^1.1.262",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/spruce-test-fixtures": "^60.1.48",
    "@sprucelabs/test": "^8.0.29",
    "@sprucelabs/test-utils": "^4.0.74",
    "@types/node": "^20.9.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-spruce": "^10.13.6",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
