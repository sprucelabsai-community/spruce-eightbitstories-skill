{
  "name": "eight-bit-stories",
  "description": "A ChatGPT powered bedtime story generator for parents who know their values and want them incorporated into nightly rituals.",
  "version": "7.0.18",
  "skill": {
    "namespace": "eightbitstories",
    "version": "v2023_09_05"
  },
  "homepage": "https://github.com/[YOUR REPO PATH]",
  "bugs": {
    "url": "https://github.com/[YOUR REPO PATH]/issues"
  },
  "keywords": [],
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w",
    "heroku-postbuild": "yarn build.dev",
    "release": "semantic-release",
    "build.dist": "yarn build.tsc && yarn build.resolve-paths",
    "build": "yarn clean && yarn run build.copy-files && tsc -p tsconfig.prod.json && yarn build.resolve-paths && rm -rf build/__tests__"
  },
  "dependencies": {
    "@sprucelabs/data-stores": "^30.0.84",
    "@sprucelabs/error": "^7.1.29",
    "@sprucelabs/globby": "^2.0.506",
    "@sprucelabs/heartwood-view-controllers": "^126.11.14",
    "@sprucelabs/mercury-client": "^43.0.153",
    "@sprucelabs/mercury-core-events": "^27.4.7",
    "@sprucelabs/mercury-types": "^48.0.115",
    "@sprucelabs/schema": "^32.1.61",
    "@sprucelabs/spruce-core-schemas": "^41.3.10",
    "@sprucelabs/spruce-event-plugin": "^74.1.35",
    "@sprucelabs/spruce-event-utils": "^41.0.129",
    "@sprucelabs/spruce-form-utils": "^28.0.19",
    "@sprucelabs/spruce-invite-utils": "^18.1.3",
    "@sprucelabs/spruce-mmp-vc-plugin": "^10.0.88",
    "@sprucelabs/spruce-permission-plugin": "^45.0.86",
    "@sprucelabs/spruce-skill-booter": "^74.1.35",
    "@sprucelabs/spruce-skill-utils": "^32.0.122",
    "@sprucelabs/spruce-store-plugin": "^74.1.35",
    "@sprucelabs/spruce-view-plugin": "^59.0.84",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "openai": "^6.2.0"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^9.0.63",
    "@sprucelabs/resolve-path-aliases": "^3.0.28",
    "@sprucelabs/semantic-release": "^5.0.2",
    "@sprucelabs/spruce-test-fixtures": "^74.1.35",
    "@sprucelabs/test": "^10.0.24",
    "@sprucelabs/test-utils": "^6.0.97",
    "@types/node": "^24.7.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.37.0",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
